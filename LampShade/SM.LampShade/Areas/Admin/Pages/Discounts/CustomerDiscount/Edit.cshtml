@page "{Id:long}"
@model SM.LampShade.Areas.Admin.Pages.Discount.CustomerDiscount.EditModel
@{
}
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>تخفیفات</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Edit Discount</a></div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">ویرایش تخفیف محصول : @Model.command.Id</h2>
            <p class="section-lead">با تکمیل کردن فرم زیر تخفیف محصول خود را ویرایش کنید</p>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>تخفیف محصولات</h4>
                        </div>
                        <div class="card-body">
                            <div class="row mt-4">
                                <div class="col-12 col-lg-8 offset-lg-2">
                                    <div class="wizard-steps">
                                        <div class="wizard-step wizard-step-active">
                                            <div class="wizard-step-icon">
                                                <i class="far fa-user"></i>
                                            </div>
                                            <div class="wizard-step-label">
                                                Edit Discount
                                            </div>
                                        </div>
                                         <div class="wizard-step wizard-step-danger">
                                          <div class="wizard-step-icon">
                                            <i class="fas fa-times"></i>
                                          </div>
                                          <div class="wizard-step-label">
                                            نکته: فیلد ها نباید خالی باشند
                                          </div>
                                        </div> 
                                    </div>

                                </div>

                            </div>
                            <form class="wizard-content mt-2" method="post">
                                <div class="wizard-pane">
                                    @* Product  *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.ProductId">محصول</label>
                                        <div class="col-lg-4 col-md-6">
                                            <select type="text" asp-for="@Model.command.ProductId" asp-items="@Model.Products" class="form-control select2-dropdown text-center">
                                                <option value="0">انتخاب محصول</option>
                                            </select>
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.ProductId"></span>
                                        </div>
                                    </div>

                                    @* DiscountRate *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.DiscountRate">درصد تخفیف</label>
                                        <div class="col-lg-4 col-md-6">
                                            <input type="text" asp-for="@Model.command.DiscountRate" class="form-control">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.DiscountRate"></span>

                                        </div>
                                    </div>
                                    @* StartDay *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.StartDay">تاریخ شروع</label>
                                        <div class="col-lg-4 col-md-6">
                                            <input asp-for="@Model.command.StartDay"  class="form-control" type="date" value="@Model.command.StartDay">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.StartDay"></span>
                                        </div>
                                    </div>
                                    @* End Date *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.EndDate">تاریخ پایان</label>
                                        <div class="col-lg-4 col-md-6">
                                            <input asp-for="@Model.command.EndDate" class="form-control" type="date" value="@Model.command.EndDate">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.EndDate"></span>
                                        </div>
                                    </div>
                                    @* Reasion *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.Reason">علت تخفیف</label>
                                        <div class="col-lg-4 col-md-6">
                                            <textarea asp-for="@Model.command.Reason" class="form-control"></textarea>
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.Reason"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4"></div>
                                        <div class="col-lg-4 col-md-6 text-right">
                                            <input type="hidden" name="Id" value="@Model.command.Id" />
                                            <button type="submit" class="btn btn-primary">ویرایش تخفیف</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>