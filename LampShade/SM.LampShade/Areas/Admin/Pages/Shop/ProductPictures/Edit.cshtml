@page "{Id:long}"
@model SM.LampShade.Areas.Admin.Pages.Shop.ProductPictures.EditModel
@{
}
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1> محصولات</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Edit Product</a></div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">ویرایش محصول : @Model.command.ProductId</h2>
            <p class="section-lead">با تکمیل کردن فرم زیر عکس محصول خود را ویرایش کنید</p>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>عکس محصول</h4>
                        </div>
                        <div class="card-body">
                            <div class="row mt-4">
                                <div class="col-12 col-lg-8 offset-lg-2">
                                    <div class="wizard-steps">
                                        <div class="wizard-step wizard-step-active">
                                            <div class="wizard-step-icon">
                                                <i class="far fa-user"></i>
                                            </div>
                                            <div class="wizard-step-label">
                                                Edit Product Picture
                                            </div>
                                        </div>
                                         <div class="wizard-step wizard-step-danger">
                                          <div class="wizard-step-icon">
                                            <i class="fas fa-times"></i>
                                          </div>
                                          <div class="wizard-step-label">
                                            نکته: فیلد ها نباید خالی باشند
                                          </div>
                                        </div> 
                                    </div>

                                </div>

                            </div>

                            <form class="wizard-content mt-2" method="post">
                                <input type="hidden" asp-for="command.Id" />
                                <div class="wizard-pane">
                                    @* picture *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.Picture">عکس</label>
                                        <div class="col-lg-4 col-md-6">
                                            <input type="text" asp-for="@Model.command.Picture" class="form-control">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.Picture"></span>

                                        </div>
                                    </div>
                                    @* Alt *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.PictureAlt">توضیح کوتاه عکس</label>
                                        <div class="col-lg-4 col-md-6">
                                            <input type="text" asp-for="@Model.command.PictureAlt" class="form-control">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.PictureAlt"></span>
                                        </div>
                                    </div>
                                    @* Picture Title *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.PictureTitle">تایتل عکس </label>
                                        <div class="col-lg-4 col-md-6">
                                            <input type="text" asp-for="@Model.command.PictureTitle" class="form-control">
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.PictureTitle"></span>

                                        </div>
                                    </div>
                                    @* CategoryId *@
                                    <div class="form-group row align-items-center">
                                        <label class="col-md-4 text-md-right text-left" asp-for="@Model.command.ProductId"> محصول</label>
                                        <div class="col-lg-4 col-md-6">
                                            <select type="text" asp-for="@Model.command.ProductId" asp-items="@Model.Products" class="form-control select2-dropdown text-center">
                                                <option value="0"> محصول</option>
                                            </select>
                                            <span class="text-danger p-2 m-auto float-right mr-5 w-100 text-center" asp-validation-for="@Model.command.ProductId"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4"></div>
                                        <div class="col-lg-4 col-md-6 text-right">
                                            <button type="submit" class="btn btn-primary">ایجاد محصول</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>